{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],

    "paths": {
      "~/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules"]
}
