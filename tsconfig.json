{
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": false,
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],

    "paths": {
      "@miss-you/aozora": ["./packages/aozora"],
      "@miss-you/kimetayo": ["./packages/kimetayo"]
    }
  },
  "exclude": ["**/dist", "**/build", "**/node_modules"]
}
